{
    "name": "surda/datetime",
    "description": "Datetime utils",
    "keywords": ["nette", "datetime"],
    "type": "library",
    "homepage": "http://surani.cz",
    "license": "MIT",
    "authors": [
        {
            "name": "Radek Šuráni",
            "homepage": "http://surani.cz",
            "email": "radek@surani.cz"
        }
    ],
    "support": {
        "email": "radek@surani.cz",
        "issues": "https://github.com/surda/datetime/issues"
    },
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "nette/tester": "^2.0",
        "ninjify/nunjuck": "^0.4",
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0",
        "phpstan/phpstan-deprecation-rules": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Surda\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Surda\\": "tests/cases/"
        }
    },
    "scripts": {
        "tests": [
            "vendor/bin/tester -s -p php -C tests/cases"
        ],
        "phpstan": [
            "vendor/bin/phpstan analyse -l max -c phpstan.neon src"
        ],
        "da": [
            "composer dump-autoload -o"
        ]
    },
    "minimum-stability": "stable"
}
